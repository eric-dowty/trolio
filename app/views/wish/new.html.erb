<% flash.each do |type, message| %>
  <%= message %>
<% end %>

<h1>Trolio</h1>

<%= form_for(:wish, url: :wish) do |f| %>
  <%= f.text_field :message, value: "wish you were here!" %>
  <%= f.text_field :number, placeholder: 'enter number here' %>
  <br><em>Enter a url below or use this trolio!</em>
  <br><%= image_tag(@url)  %>
  <%= f.hidden_field :url, value: @url %>
  <br><%= f.text_field :pic, placeholder: 'picture url' %>
  <%= f.submit 'Go Troll' %>
<% end %>